//- views/layout.pug
doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title
      block pageTitle
        | Kafi AG
    link(rel="stylesheet" href="/css/style.css")

  body
    .app
      header.topbar
        .header-left
          block headerLeft

        h1.header-title
          block pageHeader
            // Fallback: wenn pageHeader nicht überschrieben wird, nimm pageTitle
            block pageTitle
              | Kafi AG

        .header-right
          block headerRight

      // WARNUNG UNTER DEM HEADER (ZENTRAL, ÜBERALL)  // CHANGED
      if status && status.lowStock && status.lowStock.length
        .alert-full
          | Achtung: Mindestbestand unterschritten – 
          = status.lowStock.map(item => item.name).join(", ")
      else if status && status.descaleWarning
        .alert-full
          | Entkalkung fällig in #{status.descaleIn} Zubereitungen

      block content

    script(src="/js/ui-constants.js")
    script(src="/js/main.js")

